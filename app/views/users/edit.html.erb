<%= form_for @user do |f| %>
    <p>
        <%= f.label :full_name %>
        <%= f.text_field :full_name %>
    </p>
    <p>
        <%= f.label :email %>
        <%= f.text_field :email %>
    </p>
    <p>
        <%= f.label :password %>
        <%= f.text_field :password %>
    </p>

    <%= f.submit 'Change' %>
<% end %>
